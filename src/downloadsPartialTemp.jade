md-whiteframe.md-whiteframe-z1(layout="vertical")
  h2 Current Releases
  md-list
    - var file = {name: "<%= #file.name %>", href:"<%= #file.download_url %>", hash: "<%= #file.hash %>", sizeMb: "<%= #file.sizeMb %>", platform: "<%= #file.platform %>", date: "<%= #file.date %>"}
      // BEGIN ERB REPEAT BLOCK HERE 

      |<% @files.each do |file| %>
      md-item
        md-item-content
          a.downloadLink(href!=file.href, data-platform!=file.platform)
            md-card.downloadCard(layout="horizontal")
              span.downloadImg(alt!=file.platform)
              div(layout="vertical", flex)
                div(layout="horizontal")
                  span.label Name: 
                  span!= file.name
                div(layout="horizontal")
                  span.label Hash: 
                  span!= file.hash
                div(layout="horizontal")
                  span.label Date: 
                  span!= file.date                  
                div(layout="horizontal")
                  span.label Size: 
                  span!= file.sizeMb
                  span Mb
      | 
      |<% end %>
      // END ERB REPEAT BLOCK HERE  