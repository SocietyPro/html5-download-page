// This file, download-partial.jade, generates download-partial.html.tpl, a lodash template used by Cambrian-src's distribution gruntfile.

//- We use the file variable below because we need to avoid html-escaping attributes:
- var file = {name: "<%= file['name'] %>", href:"<%= file['href'] %>", hash: "<%= file['hash_sha256'] %>", sizeMb: "<%= file['sizeMb'] %>", platform: "<%= file['platform'] %>", date: "<%= file['date'] %>"}

md-item
  md-item-content
    a.downloadLink(href!=file.href, data-platform!=file.platform)
      md-card.downloadCard(layout="horizontal")
        span.downloadImg(alt!=file.platform)
        div(layout="vertical", flex)
          div(layout="horizontal")
            span.label Name: 
            span!= file.name
          div(layout="horizontal")
            span.label Hash: 
            span!= file.hash
          div(layout="horizontal")
            span.label Date: 
            span!= file.date                  
          div(layout="horizontal")
            span.label Size: 
            span!= file.sizeMb
            span Mb